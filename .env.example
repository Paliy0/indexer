# Database Configuration
# SQLite database file path (Phase 1)
# For PostgreSQL (Phase 2+): postgresql+asyncpg://user:pass@localhost/db_name
DATABASE_URL=sqlite:///./data/sites.db

# PostgreSQL Configuration (Phase 2+)
# Uncomment to use PostgreSQL instead of SQLite
# DATABASE_URL=postgresql+asyncpg://indexer_user:indexer_pass@localhost/indexer_db

# Web Parser Binary Path
# Path to the compiled Go web-parser binary
# Must be executable: chmod +x web-parser
WEB_PARSER_PATH=./web-parser/web-parser

# Debug Mode
# Enable debug logging and error traces (True for development, False for production)
DEBUG=True

# Server Configuration
# Host address to bind the application server
# Use 0.0.0.0 to accept connections from any network interface
HOST=0.0.0.0

# Server Port
# Port number for the FastAPI application
PORT=8000

# Meilisearch Configuration (Phase 2+)
# Meilisearch server URL
MEILISEARCH_HOST=http://127.0.0.1:7700

# Meilisearch master key for authentication
# Change this in production! Must be at least 16 characters
MEILI_MASTER_KEY=your-development-master-key

# Meilisearch database path (for local instance)
MEILI_DB_PATH=./data/meili_data

# Meilisearch environment (development or production)
MEILI_ENV=development

# Subdomain Routing (Phase 3+)
# Base domain for wildcard subdomain routing (e.g., "example.com")
# Leave empty to disable subdomain routing
# When set, requests to subdomain.example.com will automatically route to that site
BASE_DOMAIN=
